# AWS Configuration
aws_region = "us-east-1"
environment = "dev"
project_name = "hysteria2-vpn-client"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
public_subnets = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnets = ["10.0.11.0/24", "10.0.12.0/24"]
availability_zones = ["us-east-1a", "us-east-1b"]

# EKS Configuration
kubernetes_version = "1.28"
node_group_desired_size = 2
node_group_max_size = 4
node_group_min_size = 1
node_group_instance_types = ["t3.medium"]

# Database Configuration
db_instance_class = "db.t3.micro"
db_allocated_storage = 20
db_max_allocated_storage = 100
db_name = "vpn_client"
db_username = "vpn_user"
db_password = "your-secure-password-here"
db_backup_retention_period = 7

# Redis Configuration
redis_node_type = "cache.t3.micro"

# Domain Configuration
domain_name = "vpn.yourdomain.com"
certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/your-certificate-id"

# Additional Variables
assume_role_arn = ""
use_default_vpc = false
enable_cloudwatch_logging = true

# Tags
common_tags = {
  Project     = "hysteria2-vpn-client"
  Environment = "dev"
  ManagedBy   = "terraform"
  Owner       = "devops-team"
  CostCenter  = "vpn-infrastructure"
}
